{
  "name": "root",
  "description": "Monorepo for Paper2",
  "license": "https://github.com/emn-dev/paper2/blob/main/LICENSE",
  "private": true,
  "version": "0.0.0",
  "author": "emn-dev",
  "packageManager": "yarn@4.9.2",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emn-dev/paper2.git"
  },
  "bugs": {
    "url": "https://github.com/emn-dev/paper2/issues"
  },
  "homepage": "https://github.com/emn-dev/paper2#readme",
  "scripts": {
    "build-dep": "yarn workspaces foreach --all --parallel --topological run build-dep",
    "set-ver": "node --experimental-transform-types ./util-scripts/set-version.ts",
    "serve:docs": "node --experimental-transform-types ./util-scripts/http-server.ts",
    "test:unit": "yarn workspace paper2 test:unit:pipeline",
    "test:lint": "yarn workspace paper2 test:lint"
  },
  "devDependencies": {
    "@types/node": "22.17.1",
    "typescript": "5.9.2"
  }
}
