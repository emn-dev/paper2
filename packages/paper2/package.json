{
  "name": "paper2",
  "license": "https://github.com/emn-dev/paper2/blob/main/LICENSE",
  "description": "The essence of paper.js wrapped in modern tooling.",
  "version": "0.0.0",
  "main": "dist/paper2.js",
  "module": "dist/paper2.js",
  "types": "dist/paper2-core.d.ts",
  "author": "emn-dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emn-dev/paper2.git"
  },
  "bugs": {
    "url": "https://github.com/emn-dev/paper2/issues"
  },
  "homepage": "https://github.com/emn-dev/paper2#readme",
  "scripts": {
    "postinstall": "yarn build-dep",
    "build-dep": "IS_BUILD=true node --experimental-transform-types build.ts",
    "serve": "node --experimental-transform-types build.ts",
    "serve:watch": "node ./build.serve.watch.mjs",
    "test:unit": "vitest",
    "test:unit:pipeline": "vitest run",
    "test:lint": "eslint && yarn prettier:check",
    "test:lint:pipeline": "eslint --quiet && yarn prettier:check",
    "prettier:check": "prettier --check '**/*'"
  },
  "dependencies": {
    "acorn": "8.15.0"
  },
  "devDependencies": {
    "@paper2/eslint-configs": "workspace:^",
    "canvas": "^3.1.2",
    "dotenv": "^17.2.1",
    "esbuild": "^0.25.8",
    "eslint": "^9.33.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4"
  }
}
